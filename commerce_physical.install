<?php

/**
 * Implements hook_field_schema().
 */
function commerce_physical_field_schema($field) {
  if ($field['type'] == 'commerce_physical_weight') {
    return array(
      'columns' => array(
        'weight' => array(
          'description' => 'The numeric weight value.',
          'type' => 'numeric',
          'size' => 'normal',
          'not null' => TRUE,
          'default' => 0,
          'precision' => 15,
          'scale' => 5,
        ),
        'unit' => array(
          'description' => 'The unit of measurement.',
          'type' => 'varchar',
          'length' => '255',
          'not null' => TRUE,
          'default' => '',
        ),
      ),
      'indexes' => array(
        'weight' => array('weight'),
      ),
    );
  }
}
